<div id="team" class="wrapper">
<div class="row">
<div class="row">
  <div class="medium-3 column">

    <!-- sidebar -->
    <aside class="sidebar">
      <ul>
        <li><a href="#ManagementTeam">Management Team</a></li>
        <li><a href="#AdvisoryBoard">Advisory Board</a></li>
      </ul>
    </aside>
  </div>
  <div class="medium-9 column">

    <!-- content -->
    <content class="content">
      <h2><a name="ManagementTeam">The Team</a></h2>
      <div class="team_boxes">
        <div class="row">
          <% @teams.management_team.each do |team| %>
            <!-- render team partial -->
            <%= render team %>
          <% end %>
          </div>
      </div>
      <h2><a name="AdvisoryBoard">Advisory Board</a></h2>
      <div class="team_boxes">
        <div class="row">
          <% @teams.advisory_board.each do |team| %>
            <!-- render team partial -->
            <%= render team %>
          <% end %>
          </div>
      </div>
    </content>
  </div>
</div>
<%= render 'layouts/message_ticker' %>
</div>

</div>


