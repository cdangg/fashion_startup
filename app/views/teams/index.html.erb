<div class="container">

  <div class="header-container">
      <div class="logo-container">
        <%= image_tag("logo.png") %>
      </div>
      <div class="headline">
        <h1 class="oxygen">STARTUP FASHION WEEK</h1>
        <h2 class="oxygen2">Discover | Connect | Accelerate</h2>
         <div class="social-icons">
            <a href="#"><%= image_tag(("twitter_icon.png"), :class => "social")%></a>
             <a href="#"><%= image_tag(("facebook_icon.png"), :class => "social")%></a>
              <a href="#"><%= image_tag(("instagram_icon.png"), :class => "social")%></a>
          </div>
        </div>
          </div>

    <div class="nav-width">
      <div class="contain-to-grid sticky">
      <nav class="top-bar" data-topbar data-options="sticky_on: large">
      <ul class="title-area">
       <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
      </ul>

        <section class="top-bar-section">
        <!-- Right Nav Section -->
          <ul class="right">
            <li><%= link_to "HOME", welcome_index_path %></li>
            <li><%= link_to "ABOUT", welcome_about_path %></li>
            <li><%= link_to "THE TEAM", teams_path %></li>
            <li><%= link_to "EVENTS", events_path %></li>
            <li><%= link_to "SPEAKERS", welcome_index_path %></li>
            <li><%= link_to "SPONSORS", all_sponsors_path %></li>
            <li><%= link_to "MEDIA", welcome_media_path %></li>
            <li><%= link_to "CONTACT US", welcome_contact_path %></li>
          </ul>


        </section>
      </nav>
      </div>
    </div>

<!-- about us section -->
    <div class="body-content-wrapper">
      <div class="sidebar">
        <ul>
          <li><a href="#ManagementTeam">Management Team</a></li>
          <li><a href="#AdvisoryBoard">Advisory Board</a></li>
        </ul>
      </div>
      <div id="main">
        <h2><a name="ManagementTeam">The Team</a></h2>




      <div class="team_boxes">
             <% @teams.each do |team| %>
        <table class="each_team_box">
          <tr>
            <td>
            <figure class="cap-bot">
              <%= image_tag((team.picture_url.to_s), :class => "team_pics")%>
              <figcaption>
                <div class="team_icons">
                  <p class="connect">Connect with me!</p>
                  <% if !team.linkedin_link.empty? %>
                    <%= link_to team.linkedin_link, :target => "_blank" do %>
                      <i class="fa fa-linkedin-square fa-2x todaright"></i>
                    <% end %>
                  <% end %>
                  <% if !team.twitter_link.empty? %>
                    <%= link_to team.twitter_link, :target => "_blank" do %>
                      <i class="fa fa-twitter-square fa-2x todaright"></i>
                    <% end %>
                  <% end %>
                  <% if !team.facebook_link.empty? %>
                    <%= link_to team.facebook_link, :target => "_blank" do %>
                      <i class="fa fa-facebook-square fa-2x todaright"></i>
                    <% end %>
                  <% end %>
                </div>
              </figcaption>
            </figure>
            </td>
          </tr>
          <tr>
            <td>
               <p class="team_role_title"><%= team.role %></p>
              <p class="team_name"><%= team.name %></p>
            </td>
          </tr>
        </table>

            <% end %>
        </div>



      </div>
    </div>



<!-- footer -->
  <div class="footer">
      <div class="ticker" id="msg_ticker">
        <ul>
          <li><a href="http://www.startupfashionweek.wordpress.com" target="_blank?">For great insight on Fashion, Business and Technology follow our Blog!</a></li>
          <li><%= link_to "Want to be a part of the Team?", teams_path %></li>
          <li><a>Sign up to receive exclusive updates and offers from Startup Fashion Week!</a></li>
        </ul>
      </div>

      <div class="click">
        <div class="click_group">
          <i class="fa fa fa-chevron-left fa-3x"></i><div class="click_here">Click</div>
        </div>
    </div>
</div>

</div>