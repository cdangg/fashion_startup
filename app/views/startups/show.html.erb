<div class="container">

  <div class="header-container">
      <div class="logo-container">
        <%= image_tag("logo.png") %>
      </div>
      <div class="headline">
        <h1 class="oxygen">STARTUP FASHION WEEK</h1>
        <h2 class="oxygen2">Discover | Connect | Accelerate</h2>
         <div class="social-icons">
            <a href="#"><%= image_tag(("twitter_icon.png"), :class => "social")%></a>
             <a href="#"><%= image_tag(("facebook_icon.png"), :class => "social")%></a>
              <a href="#"><%= image_tag(("instagram_icon.png"), :class => "social")%></a>
          </div>
        </div>
          </div>

  <div class="nav-width">
    <div class="contain-to-grid sticky">
    <nav class="top-bar" data-topbar data-options="sticky_on: large">
       <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
            <li><%= link_to "HOME", welcome_index_path %></li>
              <li><%= link_to "ABOUT", welcome_about_path %></li>
              <li><%= link_to "THE TEAM", teams_path %></li>
              <li><%= link_to "EVENTS", welcome_index_path %></li>
              <li><%= link_to "SPEAKERS", welcome_index_path %></li>
              <li><%= link_to "SPONSORS", all_sponsors_path %></li>
              <li><%= link_to "MEDIA", welcome_media_path %></li>
              <li><%= link_to "CONTACT US", welcome_contact_path %></li>
      </ul>


    </section>
    </nav>
    </div>
  </div>

  <div class="body-content-wrapper">
            <div class="sidebar">
              <ul>
                <li><a href="#Startup">Startup Spotlight</a></li>
                <li><a href="#Interested?">What your Startup Featured?</a></li>
                <li><a href="#Previous">Previously in the Spotlight</a></li>
              </ul>
            </div>
            <div id="main">
                <h1><a name="Startup">STARTUP SPOTLIGHT</a></h1>
                <hr />
                <div style="height: 199px; overflow: visible;"><%= image_tag @startup.cover_image_url.to_s, :size => "679x250" %></div>
                <%= image_tag @startup.logo_url.to_s, :style => "width: 150px; margin-left: 30px; border: 3px solid white" %>
                <% if !@startup.twitter_link.empty? %>
                  <%= link_to @startup.twitter_link do %>
                    <i class="fa fa-twitter-square fa-2x"></i>
                  <% end %>
                <% end %>
                <% if !@startup.facebook_link.empty? %>
                  <%= link_to @startup.facebook_link do %>
                    <i class="fa fa-facebook-square fa-2x"></i>
                  <% end %>
                <% end %>
                <% if !@startup.app_link.empty? %>
                  <%= link_to @startup.app_link do %>
                    <%= image_tag "apple_store_icon.jpg", :style => "width:150px" %>
                  <% end %>
                <% end %>
                <p>
                    <strong><%= @startup.name %></strong><br />
                    <%= link_to @startup.website, @startup.website %><br />
                    <br />
                    Advice for other Fashion Startup Entreprenuers: <br />
                    <%= @startup.advice %><br />
                    <br />
                    Elevator Pitch:<br />
                    <%= @startup.elevator_pitch %><br />
                    <br />
                    Biggest Challenge:<br />
                    <%= @startup.challenge %>
                </p>
                    <hr />
                <p>
                  <h4><a name="Interested?"> WANT YOUR STARTUP FEATURED?</a></h4>
                  We will select a new startup to be featured periodically. If you have a Fashion Startup and would
                  like it to be featured simply
                    <a href="#" data-reveal-id="myModal" data-reveal>CLICK HERE</a> to fill out the form
                     <div id="myModal" class="reveal-modal" data-reveal>
                       <h3>Interested in being featured?</h3>
                         <p class="lead">Fill out the form below!</p>
                         <p><%= render '/interested_startups/form' %></p>
                         <a class="close-reveal-modal">&#215;</a>
                     </div>
                </p>
                <hr />
                <h4><a name="Previous">PREVIOUSLY FEATURED STARTUPS</a></h4>
                  <% @startups.each do |startups| %>
                    <ul>
                      <li>
                        <%= link_to(startup_path(startups)) do %>
                          <%=image_tag startups.logo_url, :size => "150x150" %>
                        <% end %>
                      </li>
                    </ul>
                  <% end %>
            </div>
        </div>
    <div class="footer">
      <div class="ticker" id="msg_ticker">
        <ul>
          <li><a href="http://www.startupfashionweek.wordpress.com" target="_blank?">For great insight on Fashion, Business and Technology follow our Blog!</a></li>
          <li><%= link_to "Want to be a part of the Team?", teams_path %></li>
          <li><a>Sign up to receive exclusive updates and offers from Startup Fashion Week!</a></li>
        </ul>
      </div>

      <div class="click">
        <div class="click_group">
          <i class="fa fa fa-chevron-left fa-3x"></i><div class="click_here">Click</div>
        </div>
    </div>
</div>

    </div>
</div>