            <h1 class="oxygen">STARTUP FASHION WEEK</h1>
            <h2 class="oxygen2">Discover | Connect | Accelerate</h2>
             <div class="social-icons">
                <%= image_tag(("twitter_icon.png"), :class => "social")%>
                 <%= image_tag(("facebook_icon.png"), :class => "social")%>
                  <%= image_tag(("instagram_icon.png"), :class => "social")%>
              </div>
          </div>
      </div>






  <section>

