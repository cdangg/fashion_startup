<% form_for(@subscriber) do |f| %>
  <% if @subscriber.errors.any? %>
    <div class="error_messages">
       <small class="error">Invalid Formats</small>
      <ul>
        <% for message in @subscriber.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.text_field :email %>
  <%= f.submit %>
<% end %>